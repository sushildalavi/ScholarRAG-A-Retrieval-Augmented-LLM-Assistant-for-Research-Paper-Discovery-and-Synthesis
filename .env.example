# Copy this file to `.env` and set real values only in `.env`.
#
# Example:
#   cp .env.example .env

# =========================
# Required
# =========================
OPENAI_API_KEY=your-openai-key-here
RESEARCH_CHAT_MODEL=gpt-4o-mini

# =========================
# Optional Provider API Keys
# =========================
OPENALEX_API_KEY=
IEEE_API_KEY=
SPRINGER_API_KEY=
ELSEVIER_API_KEY=
SEMANTIC_SCHOLAR_API_KEY=

# =========================
# Public Retrieval Limits (used by backend/public_search.py)
# =========================
PUBLIC_OPENALEX_LIMIT=15
PUBLIC_ARXIV_LIMIT=15
PUBLIC_CROSSREF_LIMIT=10
PUBLIC_S2_LIMIT=10
PUBLIC_SPRINGER_LIMIT=10
PUBLIC_ELSEVIER_LIMIT=10
PUBLIC_IEEE_LIMIT=10
ENABLE_WEB_FALLBACK=false

# =========================
# Source-Specific Tuning
# =========================
ARXIV_API_URL=https://export.arxiv.org/api/query
ARXIV_MAX_RESULTS=50
ARXIV_TIMEOUT=12

OPENALEX_MAX_RESULTS=50
OPENALEX_TIMEOUT=12

CROSSREF_MAX_RESULTS=50
CROSSREF_TIMEOUT=10

S2_MAX_RESULTS=20
S2_TIMEOUT=10

SPRINGER_MAX_RESULTS=30
SPRINGER_TIMEOUT=10
SPRINGER_META_VERSION=v2

ELSEVIER_MAX_RESULTS=30
ELSEVIER_TIMEOUT=10

IEEE_MAX_RESULTS=30
IEEE_TIMEOUT=10

# =========================
# Fallback Retrieval (used by backend/retriever.py)
# =========================
OPENALEX_FALLBACK_LIMIT=20
ARXIV_FALLBACK_LIMIT=20
CROSSREF_FALLBACK_LIMIT=20
S2_FALLBACK_LIMIT=10
SPRINGER_FALLBACK_LIMIT=10
ELSEVIER_FALLBACK_LIMIT=10
IEEE_FALLBACK_LIMIT=10
MULTI_HOP_MAX=2

# =========================
# Retrieval / Reranking Toggles
# =========================
USE_CROSS_ENCODER=false
CROSS_ENCODER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
CROSS_ENCODER_TOPN=30

USE_LEXICAL_BLEND=true
LEXICAL_WEIGHT=0.12

# =========================
# Storage / Cache
# =========================
STORAGE_DIR=storage
EMBED_CACHE_ENABLED=1
EMBED_CACHE_PATH=data/embed_cache.sqlite

# =========================
# Database (docker-compose defaults)
# =========================
PGHOST=127.0.0.1
PGPORT=5432
PGUSER=scholarrag
PGPASSWORD=scholarrag
PGDATABASE=scholarrag_db

# =========================
# Optional Auth / Integrations
# =========================
GOOGLE_CLIENT_ID=
BACKEND_BASE_URL=http://127.0.0.1:8000
OPENAI_API_KEY_SECRET_ID=
